<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@ include file="/WEB-INF/pages/include/taglibs.jsp"%>

<html>
  <head>
    <title>用户列表页</title>
    <meta name="decorator" content="list"/>
  </head>
  
  <body>
  <div class="container-fluid">
  	<form id="listForm" class="m20" action="${ctx}/secure/user/findPage" method="post">
    <table class="table-condensed">
      <tr>
        <td>用户登录名称：</td>
        <td><input name="dictName" id="dictName" class="form-control" value="${jskSysUser.loginName }" /></td>
        <td>
          <button type="submit" class="btn btn-info btn-sm">查询</button>
          <button type="button" class="btn btn-primary btn-sm" id="btnAdd">新增</button>
        </td>
      </tr>
    </table>
  <table class="table table-striped table-bordered table-hover table-condensed m10">
    <thead>
      <tr>
        <th>登录名</th>
        <th>用户名</th>
        <th>手机号</th>
        <th>性别</th>
        <th>身份证号</th>
        <th>状态</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <c:forEach var="user" items="${page.records}">
        <tr>
          <td>${user.loginName }</td>
          <td>${user.userName }</td>
          <td>${user.mobile }</td>
          <td>${user.sex }</td>
          <td>${user.identify }</td>
          <td>${user.status }</td>
          <td><a href="${ctx}/secure/user/edit?pkId=${dict.pkId}">修改</a> <a target="AjaxBack" href="${ctx}/secure/user/deleteById?pkId=${dict.pkId}">删除</a></td>
        </tr>
      </c:forEach>
    </tbody>
  </table>
  </div>
  	<%@ include file="/WEB-INF/pages/common/commonPage.jsp"%>
  	</form>
  <script type="text/javascript">
	$(function() {
		$("#btnAdd").click(function() {
			location.href = ctxjs + "/secure/user/create";
		});
	});
  </script>
  </body>
</html>
